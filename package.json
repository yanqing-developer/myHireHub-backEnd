{
  "name": "myhirehub-backend",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "HireHub Mini ATS Backend (Express + TypeScript + Prisma + PostgreSQL)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:dev": "prisma migrate dev",
    "prisma:gen": "prisma generate",
    "prisma:migrate:deploy": "prisma migrate deploy",  


    "prisma:seed": "prisma db seed", 
    "seed": "prisma db seed", 

    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "npx prisma generate"
  },


  "prisma": {
     "seed":"tsx src/seed/seed-jobs.ts"      
  },

  "keywords": [
    "express",
    "typescript",
    "prisma",
    "postgres",
    "ats",
    "hirehub"
  ],
  "author": "Yang Yanqing",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "prisma": "^6.19.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  }
}
